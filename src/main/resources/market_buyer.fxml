<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.minimarket.client.market.BuyerController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: white; -fx-padding: 0;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: black; -fx-padding: 10;">
            <Label text="ðŸ›ï¸  Mini Market "
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="ðŸ’° Cart Total:" style="-fx-text-fill: #dddddd; -fx-font-size: 14px;"/>
            <Label fx:id="cartTotalLabel" text="Â£0.00"
                   style="-fx-text-fill: #00ff88; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true"
                    vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <HBox spacing="40" alignment="TOP_CENTER" prefWidth="1000">
                <padding>
                    <Insets top="20" right="30" bottom="30" left="30"/>
                </padding>
                <!-- LEFT PANEL -->
                <VBox spacing="15" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">

                    <!-- SEARCH BAR -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="txtSearch" promptText="Search products..." prefWidth="250"/>
                        <Button text="Search" onAction="#handleSearch" styleClass="button-primary"/>
                        <Button text="Clear" onAction="#handleClearSearch" styleClass="button"/>
                    </HBox>

                    <!-- Category Dropdown -->
                    <ComboBox fx:id="categoryFilter" promptText="Select Category"
                              prefWidth="250"/>

                    <!-- Product container wrapper -->
                    <VBox spacing="0" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: black; -fx-background-radius: 12; -fx-padding: 12;">

                        <ScrollPane fitToWidth="true" fitToHeight="true"
                                    style="-fx-background: transparent; -fx-background-color: transparent;"
                                    VBox.vgrow="ALWAYS">

                            <FlowPane fx:id="productContainer"
                                      hgap="25" vgap="25" alignment="TOP_LEFT"
                                      style="-fx-padding: 16;">
                            </FlowPane>

                        </ScrollPane>
                    </VBox>
                </VBox>

                <!-- Shopping Cart -->
                <VBox spacing="20" alignment="TOP_LEFT" prefWidth="320">
                    <VBox spacing="10"
                          style="-fx-background-color: #000000; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="ðŸ›’ Shopping Cart"
                               style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 15px;"/>

                        <ListView fx:id="cartList" prefHeight="300"
                                  style="-fx-background-color: white; -fx-text-fill: white; -fx-background-radius: 8;"/>

                        <Button fx:id="btnRemoveFromCart" text="Remove Selected"
                                onAction="#handleRemoveFromCart"
                                style="-fx-background-color: #ff5252; -fx-text-fill: white;"/>

                        <Button text="Checkout" onAction="#handleCheckout"
                                style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 10 20;"/>

                    </VBox>

                    <VBox spacing="10"
                          style="-fx-background-color: #000000; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="â†©ï¸ Return"
                               style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 15px;"/>
                        <Button fx:id="btnBack" text="Back to Role Selection"
                                onAction="#handleBack"
                                style="-fx-background-color: white; -fx-text-fill: black;"/>
                    </VBox>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>

</BorderPane>


