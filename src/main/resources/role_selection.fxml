<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.minimarket.client.auth.RoleSelectionController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #1e1b4b, #2d1b69);
                   -fx-padding: 0;">

    <VBox alignment="CENTER" spacing="40"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">


        <VBox alignment="CENTER" spacing="60">
            <Label text="ðŸ›ï¸  Welcome to Mini Market"
                   style="-fx-text-fill: white; -fx-font-size: 48px; -fx-font-weight: bold;"/>
            <Label text="Please select your role to continue"
                   style="-fx-text-fill: #cccccc; -fx-font-size: 18px;"/>
        </VBox>


        <HBox alignment="CENTER" spacing="25" fx:id="roleButtonsBox">
            <Button fx:id="btnBuyer" text="Buyer" onAction="#handleBuyer"
                    style="-fx-background-color: #1e90ff; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-padding: 10 40; -fx-background-radius: 10;"/>
            <Button fx:id="btnWorker" text="Worker" onAction="#handleWorker"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-padding: 10 40; -fx-background-radius: 10;"/>
        </HBox>

        <!-- workers login -->
        <VBox fx:id="workerLoginBox" visible="false" spacing="15"
              alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.1);
              -fx-background-radius: 15; -fx-padding: 30; -fx-max-width: 400;">
            <Label text="ðŸ”’ Worker Login"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="txtPin" promptText="Enter 4-digit PIN"
                           style="-fx-font-size: 16px; -fx-pref-width: 250;"/>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnLogin" text="Login" onAction="#handleWorkerLogin"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-padding: 8 25; -fx-background-radius: 10;"/>
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancelWorkerLogin"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-padding: 8 25; -fx-background-radius: 10;"/>
            </HBox>
            <Label fx:id="lblPinMessage" text="" style="-fx-text-fill: #ff7675; -fx-font-size: 14px;"/>
        </VBox>

    </VBox>
</AnchorPane>

